{
  "manifest_version": 2,

  "name": "SJPL Catalog Checker",
  "description": "This extension checks the SJPL catalog for books from the current page",
  "version": "1.0",
  "background": { "scripts": [
  "underscore.js",
  "jquery-1.10.2.min.js",
  "catalog-query.js",
  "background.js"] },
  // "background_page": "background.html",
  "page_action": {
    "default_title": "SJPL Catalog Search",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
     "tabs",
     "activeTab",
     "http://www.amazon.com/",
     "http://discover.sjlibrary.org/",
     "http://*/" // Eww, get rid of global include
  ]
}
