{
  "manifest_version": 2,
  "name": "SJPL Catalog Checker",
  "description": "This extension checks the SJPL catalog for books from the current page",
  "version": "1.3",
  "icons": {"16": "book-icon16.png",
            "48": "book-icon48.png",
            "128": "book-icon128.png"},
// DEBUG
//  "icons": {"16": "book-icon-red-16.png",
//            "48": "book-icon-red-48.png",
//            "128": "book-icon-red-128.png"},
  "background": { "scripts": [
  "underscore.js",
  "jquery-1.10.2.min.js",
  "catalog-query.js",
  "background.js"] },
  "page_action": {
    "default_title": "SJPL Catalog Search",
    "default_icon": "book-icon-small.png",
// DEBUG
//    "default_icon": "book-icon-small-red.png",
    "default_popup": "popup.html"
  },
  "permissions": [
     "tabs",
     "activeTab",
     "http://www.amazon.com/",
     "https://www.amazon.com/",
     "http://books.google.com/",
     "http://discover.sjlibrary.org/"
  ]
}
